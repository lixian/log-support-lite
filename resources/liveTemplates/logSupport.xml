<?xml version="1.0" encoding="UTF-8"?>

<templateSet group="logsupport-lite">

    <template id="logsupport-lite-logt" name="logt"
              value="$LOGGER$.trace(&quot;$END$&quot;, $THROWABLE$);"
              description="Logs an trace message" toReformat="true" toShortenFQNames="true">
        <variable name="LOGGER" expression="resolveLoggerInstance(&quot;logger&quot;)"
                  defaultValue="" alwaysStopAt="false"/>
        <variable name="THROWABLE"
                  expression="resolveOptionalVariableOfType(&quot;java.lang.Throwable&quot;)"
                  defaultValue="" alwaysStopAt="false"/>
        <context>
            <option name="JAVA_STATEMENT" value="true" />
        </context>
    </template>

